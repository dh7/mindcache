# Copy this file to .env.local and fill in your values

# API URL (defaults to localhost:8787 if not set)
# Must use NEXT_PUBLIC_ prefix for client-side access
NEXT_PUBLIC_API_URL=http://localhost:8787

# Clerk Auth (optional for local dev without auth)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx

# Admin Page - Cloudflare API (for DO introspection)
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_API_TOKEN=your_api_token_with_workers_read
# Comma-separated list of Clerk user IDs who can access /admin
ADMIN_USER_IDS=

# Worker URL and admin token (for viewing DO contents)
MINDCACHE_WORKER_URL=https://mindcache-api.your-subdomain.workers.dev
MINDCACHE_ADMIN_TOKEN=generate_a_secret_token

